doctype html
html
  include includes/head.pug
  body
    div(id="chat-room")
      h3 Chat Room
      div(id="room")
        ul(id="messages")
      div(id="chatwrap")
        div(id="chatinput")
          form.form-group.chatbox(name="chatbox")
            div.input-group.input-group-lg
              div.form-control(id="m", name="message", type="text",
                (onkeydown)="onEnter(this, 'chattbutton')", placeholder="Enter message here!")
              span.input-group-btn
                button.btn.btn-primary(id="chatbutton", (onclick)="submitChat()", type="button", value="Send") Send
